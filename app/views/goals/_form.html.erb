<%= simple_form_for(@goal) do |f| %>
  <%= f.input :name,
    placeholder: @hints.pop,
    label: false,
    hint: "For instance: #{@hints.join(' &middot; ')}".html_safe
  %>

  <%= f.input :email,
    placeholder: "email@address.com",
    label: false
  %>

  <%= f.button :submit, "Kick some ass" %>
<% end %>
