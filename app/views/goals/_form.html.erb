<%= simple_form_for(@goal) do |f| %>
  <% hint_links = @hints.map { |h| link_to h, root_path(hint: h.parameterize) } %>

  <%= f.input :name,
    placeholder: @hints.first,
    label: false,
    hint: "For instance: #{hint_links.join(' &middot; ')}".html_safe
  %>

  <%= f.input :email,
    placeholder: "email@address.com",
    label: false
  %>

  <%= f.button :submit, "Kick some ass" %>
<% end %>
