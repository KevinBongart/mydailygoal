<%= simple_form_for(@goal) do |f| %>
  <% if @goal.new_record? %>
    <%= f.input :name,
      placeholder: @hints.first,
      label: false,
      hint: "For instance: #{hint_links(@hints)}".html_safe,
      input_html: { value: @hint }
    %>
  <% else %>
    <%= f.input :name, label: false, placeholder: @goal.name %>
  <% end %>

  <%= f.input :email,
    placeholder: @goal.email || "email@address.com",
    label: false
  %>

  <%= f.button :submit, "Kick some ass", class: "btn-success" %>
<% end %>
